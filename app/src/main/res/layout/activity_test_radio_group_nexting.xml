            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="容留他人吸毒罪" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="引诱、容留、介绍卖淫罪" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职务侵占罪" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行贿罪" />

        </com.google.android.flexbox.FlexboxLayout>
    </RadioGroup>
</LinearLayout>